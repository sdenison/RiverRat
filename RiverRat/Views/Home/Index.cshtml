@model RiverRat.Models.PhotoList

@{
    ViewBag.Title = "";
}

@section Styles {
    @Styles.Render("~/Content/nivo-slider/nivo-slider.css")
    @Styles.Render("~/Content/nivo-slider/default/default.css")
}

<div id="wrapper">
<div class="slider-wrapper theme-default">
    <div class="ribbon"></div>
    <div id="slider" class="nivoSlider">
        <img alt="Shop front" src="@Url.Content("~/Images/three_old_guys.jpg")"/>
        @{
            foreach (RiverRat.Models.Photo photo in Model)
            {
                <img alt="@photo.Title" src="@Url.Content("~/Content/Artists/" + photo.FileName)" title="@photo.Title" width="200"/>
            }
        }
    </div>
</div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.nivo.slider.pack.js" type="text/javascript"></script>
<script type="text/javascript">
    $(window).load(function () {
        $('#slider').nivoSlider({
            pauseTime: 7500
            
        });
    });
</script>